// Kopiera detta till Firebase Console → Firestore Database → Rules → Publish
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // User can only access their own user document
      allow read, write: if isOwner(userId);
      
      // Portfolio data document: users/{uid}/portfolio/data
      // This stores the main portfolio data (data, fx, baseCurr fields)
      match /portfolio/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Transactions collection: users/{uid}/transactions/{transactionId}
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Chart data collection: users/{uid}/chartData/{chartId}
      match /chartData/{chartId} {
        allow read, write: if isOwner(userId);
      }
      
      // History profiles collection: users/{uid}/historyProfiles/{profileId}
      match /historyProfiles/{profileId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}